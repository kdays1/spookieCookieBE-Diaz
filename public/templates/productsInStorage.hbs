{{#if products.length}}
<h2>Products in Storage</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Photo</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No products here</h3>
{{/if}}